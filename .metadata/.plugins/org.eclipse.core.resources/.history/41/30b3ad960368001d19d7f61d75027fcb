	JMenu messagemenu = new JMenu("Message");
	JMenu creditsmenu = new JMenu("Your Credits");
	JMenu Exit = new JMenu("Sign out");
	int Current_user;
	ArrayList<Applicant> Users = new ArrayList<Applicant>();
	
	
	JMenuItem i1 = new JMenuItem("View your info");
	
